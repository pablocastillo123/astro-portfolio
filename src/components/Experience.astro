---
import { config } from '../config';
---

<section id="experience" class="py-20 w-full bg-slate-50">
  <div class="container mx-auto px-6 max-w-5xl flex flex-col md:flex-row gap-12">
    <div class="w-full md:w-1/3">
      <h2 class="text-3xl font-bold mb-6 text-slate-800 flex items-center gap-4">
        <span class="text-blue-500">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-briefcase"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>
        </span> Experiencia
        <span class="h-px bg-slate-300 flex-grow max-w-xs"></span>
      </h2>
    </div>
    
    <div class="w-full md:w-2/3 space-y-12">
      {config.experience.map((job) => (
        <div class="relative pl-8 border-l border-slate-300 hover:border-amber-500 transition-colors duration-300 group">
          <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-slate-300 group-hover:bg-amber-500 transition-colors duration-300"></div>
          
          <h3 class="text-xl font-bold text-slate-800 mb-1 group-hover:text-amber-500 transition-colors">
            {job.title} <span class="text-blue-500">@ {job.company}</span>
          </h3>
          <p class="text-sm font-mono text-slate-500 mb-4">{job.date} | {job.location} | {job.modality}</p>
          <p class="text-slate-600 leading-relaxed text-lg">
            {job.description} 
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
