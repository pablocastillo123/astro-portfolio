---
import { config } from '../config';
---

<section id="experience" class="py-20">
  <div class="flex flex-col md:flex-row gap-12">
    <div class="w-full md:w-1/3">
      <h2 class="text-3xl font-bold mb-6 text-slate-100 flex items-center gap-4">
        <span class="text-blue-500">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-briefcase"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>
        </span> Experience
        <span class="h-px bg-slate-700 flex-grow max-w-xs"></span>
      </h2>
    </div>
    
    <div class="w-full md:w-2/3 space-y-12">
      {config.experience.map((job) => (
        <div class="relative pl-8 border-l border-slate-700 hover:border-blue-500 transition-colors duration-300 group">
          <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-slate-700 group-hover:bg-blue-500 transition-colors duration-300"></div>
          
          <h3 class="text-xl font-bold text-slate-100 mb-1 group-hover:text-blue-500 transition-colors">
            {job.title} <span class="text-blue-500">@ {job.company}</span>
          </h3>
          <p class="text-sm font-mono text-slate-400 mb-4">{job.date}</p>
          <p class="text-slate-400 leading-relaxed text-lg">
            {job.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
