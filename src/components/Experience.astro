---
import { config } from '../config';
---

<section id="experience" class="py-20">
  <div class="flex flex-col md:flex-row gap-12">
    <div class="w-full md:w-1/3">
      <h2 class="text-3xl font-bold mb-6 text-slate-100 flex items-center gap-4">
        <span class="text-cyan-400">02.</span> Experience
        <span class="h-px bg-slate-700 flex-grow max-w-xs"></span>
      </h2>
    </div>
    
    <div class="w-full md:w-2/3 space-y-12">
      {config.experience.map((job) => (
        <div class="relative pl-8 border-l border-slate-700 hover:border-cyan-400 transition-colors duration-300 group">
          <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-slate-700 group-hover:bg-cyan-400 transition-colors duration-300"></div>
          
          <h3 class="text-xl font-bold text-slate-100 mb-1 group-hover:text-cyan-400 transition-colors">
            {job.title} <span class="text-cyan-400">@ {job.company}</span>
          </h3>
          <p class="text-sm font-mono text-slate-400 mb-4">{job.date}</p>
          <p class="text-slate-400 leading-relaxed text-lg">
            {job.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
