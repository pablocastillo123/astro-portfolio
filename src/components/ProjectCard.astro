---
import Chip from './Chip.astro';
import type { Project } from '../config/types';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="flex flex-col justify-start h-fit items-start gap-2 bg-white/80 rounded-xl hover:-translate-y-2 transition-transform duration-300 border border-slate-200 hover:border-amber-500/30 group shadow-sm hover:shadow-xl shadow-amber-500/10">
  {project.image && (
    <div class="w-full h-52 rounded-lg overflow-hidden border border-slate-100">
      <img src={project.image} alt={project.title} class="w-full h-full object-contain" />
    </div>
  )}

  <div class="flex flex-col justify-between items-start gap-4 p-6">
    <div class="flex flex-row justify-between items-center gap-4 w-full"> 
      <h3 class="text-xl font-bold text-slate-800">{project.title}</h3>

      <div class="flex gap-4 justify-center items-center">
        {project.github && (
          <a href={project.github} target="_blank" rel="noopener noreferrer" class="text-slate-500 hover:text-blue-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
          </a>
        )}
        {project.link && (
          <a href={project.link} target="_blank" rel="noopener noreferrer" class="text-slate-500 hover:text-blue-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
          </a>
        )}
      </div>
    </div> 

    <p class="text-slate-600 text-sm leading-relaxed">
      {project.description}
    </p>
    
    <div class="flex flex-wrap items-center justify-start gap-3">
      {project.tags.map((tag) => (
        <Chip text={tag} />
      ))}
    </div>
  </div>
</div>

