---
import type { SiteConfig } from '../config/types';

interface Props {
  config: SiteConfig;
  currentLang: string;
}

const { config, currentLang } = Astro.props;

const homeLink = currentLang === 'es' ? '/' : '/en';
---

<header class="fixed top-0 left-0 w-full z-10 bg-slate backdrop-blur-md border-b border-white/5">
    <nav class="container mx-auto px-6 py-4 flex justify-between items-center max-w-5xl">
        <a href={homeLink} class="text-xl font-bold text-blue-500 font-mono">
            &lt;{config.name} /&gt;
        </a>

        <!-- Desktop Menu -->
        <ul class="hidden md:flex gap-8 items-center">
            {config.nav.map(item => (
                <li><a href={item.href} class="text-sm text-slate-600 hover:text-amber-500 transition-colors">{item.name}</a></li>
            ))}
            
            <!-- Language Selector -->
            <li class="ml-4 flex items-center gap-2 border-l border-slate-300 pl-4">
                <a 
                    href="/" 
                    class={`text-sm font-medium transition-colors ${currentLang === 'es' ? 'text-blue-500' : 'text-slate-400 hover:text-slate-600'}`}
                >
                    ES
                </a>
                <span class="text-slate-300">/</span>
                <a 
                    href="/en" 
                    class={`text-sm font-medium transition-colors ${currentLang === 'en' ? 'text-blue-500' : 'text-slate-400 hover:text-slate-600'}`}
                >
                    EN
                </a>
            </li>
        </ul>

        <!-- Mobile Menu Button -->
        <button id="menu-toggle" class="md:hidden text-slate-600 focus:outline-none" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </nav>

</header>

    <!-- Mobile Menu Overlay -->
<div id="mobile-menu" class="fixed h-full px-4 py-4 inset-0 z-40 bg-slate-50/95 backdrop-blur-xl transform translate-x-full transition-transform duration-300 ease-in-out md:hidden flex flex-col items-center justify-center space-y-8">
    <button id="menu-close" class="absolute top-4 right-6 text-slate-600 focus:outline-none" aria-label="Close menu">
         <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
    </button>

    {config.nav.map(item => (
        <a href={item.href} class="mobile-link text-lg text-slate-600 hover:text-amber-500 transition-colors">{item.name}</a>
    ))}

    <div class="flex items-center gap-6 mt-4 pt-8 border-t border-slate-200 w-full justify-center">
        <a 
            href="/" 
            class={`text-lg font-medium transition-colors ${currentLang === 'es' ? 'text-blue-500' : 'text-slate-400'}`}
        >
            Espa√±ol
        </a>
        <a 
            href="/en" 
            class={`text-lg font-medium transition-colors ${currentLang === 'en' ? 'text-blue-500' : 'text-slate-400'}`}
        >
            English
        </a>
    </div>
</div>
<script>
    const menuToggle = document.getElementById('menu-toggle');
    const menuClose = document.getElementById('menu-close');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    function toggleMenu() {
        if (mobileMenu) {
            mobileMenu.classList.toggle('translate-x-full');
            
            // Prevent scrolling when menu is open
            if (!mobileMenu.classList.contains('translate-x-full')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }
    }

    menuToggle?.addEventListener('click', toggleMenu);
    menuClose?.addEventListener('click', toggleMenu);

    // Close menu when clicking a link
    mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
             if (mobileMenu && !mobileMenu.classList.contains('translate-x-full')) {
                toggleMenu();
            }
        });
    });
</script>
