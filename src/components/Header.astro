---
import { config } from '../config';
---

<header class="fixed top-0 left-0 w-full z-10 bg-slate backdrop-blur-md border-b border-white/5">
    <nav class="container mx-auto px-6 py-4 flex justify-between items-center max-w-5xl">
        <a href="#" class="text-xl font-bold text-blue-500 font-mono">
            &lt;{config.name} /&gt;
        </a>

        <!-- Desktop Menu -->
        <ul class="hidden md:flex gap-8">
            <li><a href="#about" class="text-sm text-slate-600 hover:text-amber-500 transition-colors">Sobre mí</a></li>
            <li><a href="#experience" class="text-sm text-slate-600 hover:text-amber-500 transition-colors">Experiencia</a></li>
            <li><a href="#projects" class="text-sm text-slate-600 hover:text-amber-500 transition-colors">Proyectos</a></li>
            <li><a href="#skills" class="text-sm text-slate-600 hover:text-amber-500 transition-colors">Habilidades</a></li>
            <li><a href="#certificates" class="text-sm text-slate-600 hover:text-amber-500 transition-colors">Certificados</a></li>
            <li><a href="#contact" class="text-sm text-slate-600 hover:text-amber-500 transition-colors">Contacto</a></li>
        </ul>

        <!-- Mobile Menu Button -->
        <button id="menu-toggle" class="md:hidden text-slate-600 focus:outline-none" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </nav>

</header>

<!-- Mobile Menu Overlay -->
<div id="mobile-menu" class="fixed h-full px-4 py-4 inset-0 z-40 bg-slate-50/95 backdrop-blur-xl transform translate-x-full transition-transform duration-300 ease-in-out md:hidden flex flex-col items-center justify-center space-y-8">
    <button id="menu-close" class="absolute top-4 right-6 text-slate-600 focus:outline-none" aria-label="Close menu">
         <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
    </button>

    <a href="#about" class="mobile-link text-lg text-slate-600 hover:text-amber-500 transition-colors">Sobre mí</a>
    <a href="#experience" class="mobile-link text-lg text-slate-600 hover:text-amber-500 transition-colors">Experiencia</a>
    <a href="#projects" class="mobile-link text-lg text-slate-600 hover:text-amber-500 transition-colors">Proyectos</a>
    <a href="#skills" class="mobile-link text-lg text-slate-600 hover:text-amber-500 transition-colors">Habilidades</a>
    <a href="#certificates" class="mobile-link text-lg text-slate-600 hover:text-amber-500 transition-colors">Certificados</a>
    <a href="#contact" class="mobile-link text-lg text-slate-600 hover:text-amber-500 transition-colors">Contacto</a>
</div>
<script>
    const menuToggle = document.getElementById('menu-toggle');
    const menuClose = document.getElementById('menu-close');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    function toggleMenu() {
        if (mobileMenu) {
            mobileMenu.classList.toggle('translate-x-full');
            
            // Prevent scrolling when menu is open
            if (!mobileMenu.classList.contains('translate-x-full')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }
    }

    menuToggle?.addEventListener('click', toggleMenu);
    menuClose?.addEventListener('click', toggleMenu);

    // Close menu when clicking a link
    mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
             if (mobileMenu && !mobileMenu.classList.contains('translate-x-full')) {
                toggleMenu();
            }
        });
    });
</script>
