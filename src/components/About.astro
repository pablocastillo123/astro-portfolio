---
import type { SiteConfig } from '../config/types';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
---

<section id="about" class="py-20 w-full">
  <div class="container mx-auto px-6 max-w-5xl flex flex-col md:flex-row gap-12 items-center">
    <div class="w-full">
      <h2 class="text-3xl font-bold mb-6 text-slate-800 flex items-center gap-4">
        <span class="text-blue-500">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-user"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        </span> {config.titles.about}
      </h2>
     
      <p class="text-slate-600 text-lg leading-relaxed">
        {config.about.description1}
      </p>
      <br/>
      <p class="text-slate-600 text-lg leading-relaxed">
        {config.about.description2}
      </p>
    </div>
  </div>
</section>