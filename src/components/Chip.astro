---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-cyan-900/30 text-cyan-400 border border-cyan-800/50 hover:bg-cyan-900/50 hover:border-cyan-400/50 transition-colors duration-200">
  {text}
</span>
