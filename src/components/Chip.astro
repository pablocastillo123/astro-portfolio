---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-500/10 text-blue-500 border border-blue-500/40 hover:bg-blue-500/30 hover:border-blue-500/60 transition-colors duration-200 gap-2">
  {text}
</span>
