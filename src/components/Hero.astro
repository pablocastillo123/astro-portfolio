---
import { config } from '../config';
---

<section class="flex flex-col justify-center min-h-[80vh] py-20">
  <div class="space-y-8">
    <h2 class="text-blue-400 font-medium tracking-wide">Hello, I'm</h2>
    <h1 class="text-5xl md:text-7xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-cyan-300 via-blue-500 to-cyan-300 pb-2">
      {config.name}
    </h1>
    <h2 class="text-3xl md:text-5xl font-bold text-slate-400">
      {config.role}
    </h2>
    <p class="max-w-xl text-lg text-slate-400 leading-relaxed">
      {config.bio}
    </p>
    
    <div class="flex gap-4 pt-4">
      <a 
        href="#projects" 
        class="px-8 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-colors duration-200 shadow-lg shadow-blue-500/40"
      >
        View Work
      </a>
      <a 
        href="#contact" 
        class="px-8 py-3 border border-slate-700 hover:border-blue-500 hover:text-blue-400 text-slate-300 font-medium rounded-lg transition-all duration-200"
      >
        Contact Me
      </a>
    </div>
  </div>
</section>
