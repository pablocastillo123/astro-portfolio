---
import { config } from '../config';
import ProjectCard from './ProjectCard.astro';
---

<section id="projects" class="py-20 w-full">
  <div class="container mx-auto px-6 max-w-5xl">
    <h2 class="text-3xl font-bold mb-12 text-slate-800 flex items-center gap-4">
    <span class="text-blue-500">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-code-xml"><path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/></svg>
    </span> Proyectos
    <span class="h-px bg-slate-300 flex-grow max-w"></span>
  </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {config.projects.map((project) => (
        <ProjectCard project={project} />
      ))}
    </div>
  </div>
</section>
