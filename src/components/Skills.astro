---
import type { SiteConfig } from '../config/types';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
---

<section id="skills" class="py-20 scroll-mt-16 w-full bg-slate-50">
  <div class="container mx-auto px-6 max-w-5xl space-y-8">
    <h2 class="text-3xl font-bold mb-12 text-slate-800 flex items-center gap-4">
      <span class="text-blue-500">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-terminal"><polyline points="4 17 10 11 4 5" /><line x1="12" y1="19" x2="20" y2="19" /></svg>
      </span> {config.titles.skills}
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6">
      {config.skills.map((skill) => (
        <div class="group flex flex-col items-center justify-center p-6 bg-white border border-slate-200 rounded-xl hover:border-amber-500/50 hover:bg-white transition-all duration-300 transform hover:-translate-y-1 shadow-sm hover:shadow-xl shadow-amber-500/10">
          <i class={`${skill.icon} text-4xl md:text-5xl text-slate-500 group-hover:text-blue-500 transition-colors duration-300 mb-3`}></i>
          <span class="text-sm font-medium text-slate-600 group-hover:text-slate-900 transition-colors duration-300">
            {skill.name}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
